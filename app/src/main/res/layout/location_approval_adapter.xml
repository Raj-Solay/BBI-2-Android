<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_10sdp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDocName"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/black"
                android:text="Office Location"
                android:lines="1"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgMap"
                android:layout_gravity="end|right"
                android:src="@drawable/ic__location"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgOfficeMeasurement"
                android:src="@drawable/app_logo"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"/>

            <ImageView
                android:id="@+id/imgVideo"
                android:src="@drawable/app_logo"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5dp"
                app:cardCornerRadius="@dimen/_8dp">
                <LinearLayout
                    android:id="@+id/lnrViewImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Image1-->
                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:layout_margin="@dimen/_5dp"
                        app:cardCornerRadius="@dimen/_8dp">
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/uploadImageOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llUploadPhoto"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="@color/light_orange"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/llUploadOfficeBlueprint">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgvpancard"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgpancard"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/checkWithTextLayout"
                            android:layout_width="wrap_content"
                            android:text="Photos1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                            app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                            app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                    </LinearLayout>
                    <!--Image2-->
                    <LinearLayout
                        android:id="@+id/uploadImageTwo"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llUploadPhoto2"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="@color/light_orange"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgvpancard2"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgpancard2"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/checkWithTextLayout"
                            android:layout_width="wrap_content"
                            android:text="Photos2"
                            app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                            app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                            app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                    </LinearLayout>

                    <!--Image3-->
                    <LinearLayout
                        android:id="@+id/uploadImageThree"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llUploadPhoto3"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="@color/light_orange"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgvpancard3"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgpancard3"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/checkWithTextLayout"
                            android:layout_width="wrap_content"
                            android:text="Photos3"
                            app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                            app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                            app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                    </LinearLayout>

                    <!--Image 4-->
                    <LinearLayout
                        android:id="@+id/uploadImageFour"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llUploadPhoto4"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="@color/light_orange"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgvpancard4"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgpancard4"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/checkWithTextLayout"
                            android:layout_width="wrap_content"
                            android:text="Photos4"
                            app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                            app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                            app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                    </LinearLayout>

                    <!--Image 5-->
                    <LinearLayout
                        android:id="@+id/uploadImageFive"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llUploadPhoto5"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:foregroundGravity="center"
                            app:cardBackgroundColor="@color/light_orange"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgvpancard5"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgpancard5"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/checkWithTextLayout"
                            android:layout_width="wrap_content"
                            android:text="Photos5"
                            app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                            app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                            app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtReject"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_red"
                android:fontFamily="@font/source_semibold"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_10dp"
                android:text="Reject"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />

            <View
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_56sdp"/>
            <TextView
                android:id="@+id/txtVerify"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:background="@drawable/button_green"
                android:fontFamily="@font/source_semibold"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_10dp"
                android:text="Approve"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>






    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10dp"/>



</LinearLayout>