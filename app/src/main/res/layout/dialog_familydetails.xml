<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_button"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtfamilydetail"
        style="@style/fontsemibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ct_ifamilydetail"
        android:textColor="@color/orange_700"
        android:textSize="@dimen/medium_font" />

    <View
        android:id="@+id/lineaccademicone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@color/border" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtfamilyname"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefwriteaname"
        android:inputType="textCapWords"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtfamilyrelation"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefwritearelation"
        android:inputType="textCapWords"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtfamilyage"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefage"
        android:inputType="number"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edteducation"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefeducation"
        android:inputType="textCapWords"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtoccupation"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefoccupation"
        android:inputType="textCapWords"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtmonthlyincome"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefmonthlyincome"
        android:inputType="number"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtcontactnumber"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefnumber"
        android:inputType="number"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtaddress"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/ct_perrefwriteaddress"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="4"
        android:overScrollMode="always"
        android:padding="@dimen/textboxpadding"
        android:textColor="@color/heading"
        android:textColorHint="@color/heading"

        android:textSize="@dimen/medium_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btncancelfamily"
            style="@style/fontsemibold"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialogbtn"
            android:layout_gravity="center"
            android:layout_weight="2.4"
            android:background="@drawable/bg_label"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/heading"
            android:textSize="@dimen/large_font" />

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnsubmitfamily"
            style="@style/fontsemibold"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialogbtn"
            android:layout_gravity="center"
            android:layout_weight="2.4"
            android:background="@drawable/bg_round"
            android:gravity="center"
            android:text="@string/f_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />
    </LinearLayout>
</LinearLayout>