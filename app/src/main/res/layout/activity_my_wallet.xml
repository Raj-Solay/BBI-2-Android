<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_100"
    android:orientation="vertical">

    <include
        android:id="@+id/custom_title_layout"
        layout="@layout/hader"
        app:layout_constraintTop_toTopOf="@+id/posts" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:elevation="4dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/rectanglegrey"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/source_regular"
                    android:gravity="center|left"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="Low Balance"
                    android:textColor="@color/status_red"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:fontFamily="@font/source_semibold"
                    android:gravity="center|left"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="@string/Rs"
                    android:textColor="@color/orange_700"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@color/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/source_semibold"
                    android:gravity="center|left"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="Low Balance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/rect_boder"
                    android:fontFamily="@font/source_regular"
                    android:gravity="center|left"
                    android:hint="Enter Your Description"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/source_regular"
                    android:gravity="center|left"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="Recommended"
                    android:textColor="@color/devider_color"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_select"
                        android:fontFamily="@font/source_semibold"
                        android:gravity="center|left"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:text="\u20B9 1000"
                        android:textColor="@color/orange_700"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:background="@drawable/border_select"
                        android:fontFamily="@font/source_semibold"
                        android:gravity="center|left"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:text="\u20B9 1000"
                        android:textColor="@color/orange_700"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:background="@drawable/border_select"
                        android:fontFamily="@font/source_semibold"
                        android:gravity="center|left"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:text="\u20B9 1000"
                        android:textColor="@color/orange_700"
                        android:textSize="@dimen/_16sdp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submitsignup"
                    style="@style/fontregular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="SUBMIT"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_font"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/confirmpwdlayout" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/button">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/biz_bulls"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_getup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/iv_right"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_semibold"
                            android:gravity="center|left"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="Set Auto Top-up"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_regular"
                            android:gravity="center|left"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="Never run out of balance "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/_10sdp"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/button"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/biz_bulls"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/iv_right_wallet"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_semibold"
                            android:gravity="center|left"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="Set Auto Top-up"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_right_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/_10sdp"
                        android:src="@drawable/right_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>