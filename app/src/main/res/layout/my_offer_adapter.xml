<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rectanglegrey">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/biz_bulls">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_time"
                    android:ellipsize="end"
                    android:ems="3"
                    android:fontFamily="@font/source_semibold"
                    android:gravity="center|left"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="yugal gfgfdgdfgf ghfgh jh yjgj hkjgkm liukmily  klti65um4murm6u5u65um65ynuurnututrtirirnurruurururtunruu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_regular"
                    android:gravity="center"
                    android:text="3h"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/border"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_regular"
                android:gravity="center"
                android:text="Don't wait Insure today!"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:textColor="@color/border"
                android:textSize="@dimen/_14sdp"
                android:paddingHorizontal="@dimen/_10sdp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>