<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_16sdp"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/stepSubmit">

        <LinearLayout
            android:id="@+id/elevenLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_attachmentinfo" />

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:backgroundTint="@android:color/transparent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkPanCard"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/attachmentPanCard" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgpancard"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button"
                        android:text="@string/upload_attachement"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/source_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgvpancard"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/upload" />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:backgroundTint="@android:color/transparent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkAadharCard"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/attachmentAadhaar" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgaadharcard"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button"
                        android:text="@string/upload_attachement"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/source_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgvaadharcard"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/upload" />

                        <ImageView

                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:backgroundTint="@android:color/transparent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkResidenceProof"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/attachmentResidential" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgaResidence"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button"
                        android:text="@string/upload_attachement"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/source_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:visibility="gone"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgvResidence"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/upload" />

                        <ImageView

                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:backgroundTint="@android:color/transparent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkRecentPhotographOfApplicant"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/attachmentPhoto" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgaRecentPhotographOfApplicant"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button"
                        android:text="@string/upload_attachement"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/source_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:visibility="gone"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgvRecentPhotographOfApplicant"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:backgroundTint="@android:color/transparent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkIndividually"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/attachmentIndividuallyField" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgaIndividually"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button"
                        android:text="@string/upload_attachement"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/source_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgvIndividually"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/upload" />

                        <ImageView

                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:backgroundTint="@android:color/transparent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkArbitaryDocuments"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/attachmentarbitary" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgaBBI"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button"
                        android:text="@string/upload_attachement"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/source_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgvBBI"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/upload" />

                        <ImageView

                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stepSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_submit"
        android:gravity="center"
        android:text="@string/f_submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />
</RelativeLayout>