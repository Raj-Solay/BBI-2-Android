<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/elevenLayout"
        style="@style/regLLAll">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/titleBox"
            android:text="@string/ct_attachmentinfo" />

        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkPanCard"
                    style="@style/checkBox" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/ct_checkeleven" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvpancard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgpancard"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkAadharCard"
                    style="@style/checkBox" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/ct_checktwelve" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvaadharcard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgaadharcard"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkResidenceProof"
                    style="@style/checkBox" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/ct_checkthirteen" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvResidence"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgaResidence"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkRecentPhotographOfApplicant"
                    style="@style/checkBox" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/ct_checkfourtin" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvRecentPhotographOfApplicant"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgaRecentPhotographOfApplicant"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkIndividually"
                    style="@style/checkBox" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/ct_checkfiftin" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvIndividually"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgaIndividually"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stepSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8dp"
            android:background="@drawable/bg_submit"
            android:gravity="center"
            android:text="@string/f_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>