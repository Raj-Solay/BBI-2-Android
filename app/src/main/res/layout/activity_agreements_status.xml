<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/elevenLayout"
       android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbarh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarHeight"
            android:background="@color/orange_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/layoutdraweropen"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_10dp"
                    android:src="@drawable/ic__back_white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/layoutdraweropen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtlcoationname"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/imagebox"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/minimumspacing"
                    android:layout_marginEnd="@dimen/minimumspacing"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/app_logo"
                    android:text="@string/agreements"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/upload_client_franchisee_agreement" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/llUploadFranchiseeAgreement"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvpancard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgpancard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_viewFranchisee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/album_dp_10" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/upload_party_agreement" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                android:id="@+id/llUploadThirdPartyAgreement"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvaadharcard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgaadharcard"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_viewThirdParty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/album_dp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnCancel"
                style="@style/fontsemibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialogbtn"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:background="@drawable/bg_label"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/heading"
                android:textSize="@dimen/large_font" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnSubmit"
                style="@style/fontsemibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialogbtn"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:text="@string/f_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/large_font" />
        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>