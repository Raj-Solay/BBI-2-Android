<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/elevenLayout"
        style="@style/regLLAll">


        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/upload_client_franchisee_agreement" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/llUploadFranchiseeAgreement"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvpancard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgpancard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_viewFranchisee"
                style="@style/Album.WrapContent.WidthMatchParent"
                android:layout_marginTop="@dimen/album_dp_10" />
        </LinearLayout>

        <LinearLayout
            style="@style/checkAndTextLayout"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                style="@style/checkAndTextLayout"
                android:backgroundTint="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/upload_party_agreement" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:foregroundGravity="center"
                android:id="@+id/llUploadThirdPartyAgreement"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgvaadharcard"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/imgaadharcard"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_viewThirdParty"
                style="@style/Album.WrapContent.WidthMatchParent"
                android:layout_marginTop="@dimen/album_dp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btncancelrefferance"
                style="@style/fontsemibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialogbtn"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:background="@drawable/bg_label"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/heading"
                android:textSize="@dimen/large_font" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnsubmitrefferance"
                style="@style/fontsemibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialogbtn"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:text="@string/f_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/large_font" />
        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>