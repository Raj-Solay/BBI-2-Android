<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_100"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.MyOfferActivity">
    <include
        android:id="@+id/custom_title_layout"
        layout="@layout/hader"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/custom_title_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_my_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingBottom="@dimen/_40sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
    <include
        android:id="@+id/nopost"
        layout="@layout/empty_state_view"
        app:layout_constraintTop_toBottomOf="@+id/ll_list" />

</LinearLayout>