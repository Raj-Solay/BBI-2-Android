<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeCustomerFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/minimumspacing"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/sliderfodashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp" />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom"
                        android:elevation="4dp" />
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtservices"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="Uploads"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_service" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rlleads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtleads"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="Reports"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_Franchising_projects"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerleads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rlleads" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_50sdp"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/overrallspacing"
                    android:layout_marginTop="@dimen/overrallspacing"
                    android:layout_marginEnd="@dimen/overrallspacing"
                    android:background="@drawable/card_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/fontregular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/minimumspacing"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:layout_marginEnd="@dimen/minimumspacing"
                        android:layout_marginBottom="@dimen/minimumspacing"
                        android:layout_toLeftOf="@+id/tv_Update"
                        android:gravity="center|left"
                        android:text="Update Profile"
                        android:textColor="@color/heading"
                        android:textSize="@dimen/small_font" />



                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/tv_Update"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button"
                            android:gravity="center"
                            android:text="Update"
                            android:textAllCaps="false"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white" />
                </RelativeLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_service_emp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtservices_emp"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="Services"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all_emp"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_services_emp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_service_emp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_aproval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_aproval"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="Approvals"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all__aproval"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_aproval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_aproval" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_hr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_hr"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="Services"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all_hr"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_hr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_hr" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_assignment"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="My Assignments"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all_assignment"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_assignment" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_Projects_Scope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_Projects_Scope"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="My Assignments"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all_Projects_Scope"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_Projects_Scope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_Projects_Scope" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/minimumspacing"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_roundwhite"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintscope">

                    <RelativeLayout
                        android:id="@+id/rl_Refer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_Refer"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:text="My Assignments"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/medium_font" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_all_Refer"
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="@dimen/overrallspacing"
                            android:gravity="center"
                            android:paddingRight="12dp"
                            android:text="View All"
                            android:textColor="@color/facebook_color"
                            android:textSize="@dimen/medium_font" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_Refer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/minimumspacing"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_Refer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>