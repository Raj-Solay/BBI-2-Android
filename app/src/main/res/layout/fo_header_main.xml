<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:theme="@style/EmpBottomTheme">

    <FrameLayout
        android:id="@+id/image_fm"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_44sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgnavuserprofile"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
           android:src="@drawable/emp_profile"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="@drawable/image_card"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/camera"
                app:tint="@color/white" />
        </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtfoname"
        style="@style/fontsemibold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:text="@string/sample_username"
        android:textColor="@color/heading"
        android:textSize="@dimen/large_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_fm"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtfomobile"
        style="@style/fontregular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:text="+91 98XXXXXX88"
        android:textColor="@color/heading"
        android:textSize="@dimen/small_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_fm"
        app:layout_constraintTop_toBottomOf="@+id/txtfoname" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtfoemail"
        style="@style/fontregular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:text="useremail@gmail.com"
        android:textColor="@color/heading"
        android:textSize="@dimen/small_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_fm"
        app:layout_constraintTop_toBottomOf="@+id/txtfomobile" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_fm">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtinfoprofilecomplete"
            style="@style/fontregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:text="@string/completeprofile"
            android:textColor="@color/heading"
            android:textSize="@dimen/medium_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lrPrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtinfoprofilecomplete"
            app:layout_constraintTop_toBottomOf="@+id/txtinfoprofilecomplete"
            android:orientation="horizontal">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBarprofileupdate"
                style="@style/Widget.MaterialComponents.CircularProgressIndicator.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="8dp"
                android:indeterminate="false"
                android:progress="100"
                android:secondaryProgress="0"
                app:indicatorColor="@color/orange_700"
                app:indicatorDirectionLinear="startToEnd"
                app:showAnimationBehavior="inward"
                app:trackColor="@color/white"
                android:layout_weight="1"
                app:trackCornerRadius="6dp"
                app:trackThickness="6dp" />
            <TextView
                android:id="@+id/txtPercentageValue"
                android:text=""
                android:textSize="@dimen/_11ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/orange_700"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutcp">

