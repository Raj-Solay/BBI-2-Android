<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/nineLayout"
        style="@style/regLLAll">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/childName"
            style="@style/inputBox"
            android:hint="Name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/childAge"
            style="@style/inputBox"
            android:hint="Age"
            android:maxLength="2"
            android:inputType="number" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitle"
            android:text="Sex" />

        <RelativeLayout style="@style/spinnerLayout">

            <com.bbi.bizbulls.utils.CustomSpinner
                android:id="@+id/spnrChildSex"
                style="@style/customSpinner"
                android:entries="@array/gender"/>

            <ImageView style="@style/customSpinnerDropDown" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/staysWith"
            style="@style/inputBox"
            android:hint="Stays with" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stepSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8dp"
            android:background="@drawable/bg_submit"
            android:gravity="center"
            android:text="@string/f_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>