                            android:text="Raj Sir"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            style="@style/fontNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="8977362436"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/txtFullname"
                            style="@style/fontNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="test@gmail.com"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/txtAddress"
                            style="@style/fontNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="Ahmedabad, Gujarat"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/txtDate"
                            style="@style/fontNormal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="26-07-2022 22:05 PM"
                            android:textSize="@dimen/_10ssp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|end"
                        android:gravity="right|end"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/fontregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_roundlighorange"
                            android:text="BIZ BULLS INDIA"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/txtcustomerid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="INDGJAMD12345"
                            android:textColor="@color/orange_700"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/txtView"
                            android:layout_width="@dimen/_56sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/button"
                            android:fontFamily="@font/source_semibold"
                            android:gravity="center"

                            android:text="View"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

