        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10dp"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCGender"
                android:layout_weight="1"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtCAge"
                android:text="22 Years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listDocuments"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:paddingHorizontal="@dimen/_10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtEmptyError"
            android:text="You don't have any pending KYC approvals."
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:id="@+id/txtBg"
        android:background="#808080"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linerApprove"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:alpha="0.5"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnCancelFinal"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_gravity="end"
            android:gravity="center"
            android:backgroundTint="@color/status_red"
            android:fontFamily="@font/source_semibold"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btnApproveFinal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button"
            android:backgroundTint="@color/status_green"
            android:fontFamily="@font/source_semibold"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Approve"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
