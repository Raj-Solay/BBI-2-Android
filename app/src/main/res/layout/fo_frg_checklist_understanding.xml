<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_16sdp"
    android:background="@color/white">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/stepSubmit">

        <LinearLayout
            android:id="@+id/fourLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkone" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checktwo" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkthree" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkfour" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkfive" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checksix" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkseven" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkeight" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checknine" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/titleBox"
                android:text="@string/ct_checkten" />

            <LinearLayout style="@style/checkAndTextLayout">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checklistForFranchise"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/checkBox" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/checkWithTextLayout"
                    android:text="@string/ct_checklistagree" />
            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stepSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_submit"
        android:gravity="center"
        android:text="@string/f_submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />
</RelativeLayout>