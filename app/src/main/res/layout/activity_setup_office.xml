<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/elevenLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbarh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarHeight"
            android:background="@color/orange_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/layoutdraweropen"
                android:layout_width="@dimen/toolBarHeight"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_10dp"
                    android:src="@drawable/ic__back_white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/layoutdraweropen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtlcoationname"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/imagebox"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/minimumspacing"
                    android:layout_marginEnd="@dimen/minimumspacing"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/app_logo"
                    android:text="@string/upload_setup_photos"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/llCustomerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/albumTransparent"
                android:elevation="10dp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layouttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingBottom="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/checkWithTextLayout"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:text="@string/upload_setup_photo" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto1"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">


                                <ImageView
                                    android:id="@+id/imgPhotoPlaceholder1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgPhoto1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </androidx.cardview.widget.CardView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/btnRemove1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto1"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto1"
                                app:layout_constraintEnd_toEndOf="@+id/llUploadPhoto1"
                                android:text="@string/remove"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto2"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:foregroundGravity="center"
                                app:layout_constraintTop_toTopOf="@+id/llUploadPhoto1"
                                android:layout_marginStart="@dimen/_15sdp"
                                app:layout_constraintStart_toEndOf="@id/llUploadPhoto1"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">


                                <ImageView
                                    android:id="@+id/imgPhotoPlaceholder2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/upload" />

                                <ImageView
                                    android:id="@+id/imgPhoto2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/btnRemove2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto2"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto2"
                                app:layout_constraintEnd_toEndOf="@+id/llUploadPhoto2"
                                android:text="@string/remove"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/llPaymentSummery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/albumTransparent"
                android:elevation="10dp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llCustomerImage">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llInfo"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnAddCounceller"
                            style="@style/fontsemibold"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dialogbtn"
                            android:layout_gravity="center"
                            android:layout_weight="2.4"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/bg_label"
                            android:gravity="center"
                            android:text="@string/add_counceller"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_font" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0.2" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnAddFieldStaff"
                            style="@style/fontsemibold"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dialogbtn"
                            android:layout_gravity="center"
                            android:layout_weight="2.4"
                            android:background="@drawable/bg_round"
                            android:gravity="center"
                            android:backgroundTint="@color/teal_700"
                            android:text="@string/add_field_staff"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_font" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/albumTransparent"
                android:elevation="10dp"
                android:id="@+id/llInfo"
                app:cardCornerRadius="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llPaymentSummery">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtName"
                        style="@style/fontregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/overrallspacing"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large_font"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDesignation"
                        style="@style/fontregular"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/designation"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtName"
                        app:layout_constraintTop_toTopOf="@+id/txtName"
                        android:textSize="@dimen/large_font"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/txtDesignation"
                        app:layout_constraintStart_toStartOf="@+id/txtName"
                        android:paddingBottom="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/txtDesignation"
                        android:layout_marginTop="@dimen/album_dp_10" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btncancelrefferance"
                style="@style/fontsemibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialogbtn"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:background="@drawable/bg_label"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/heading"
                android:textSize="@dimen/large_font" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnsubmitrefferance"
                style="@style/fontsemibold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialogbtn"
                android:layout_gravity="center"
                android:layout_weight="2.4"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:text="@string/f_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/large_font" />
        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>