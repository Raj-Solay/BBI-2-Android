<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/widthbox"
    android:layout_height="@dimen/heightbox"
    android:layout_marginStart="@dimen/_12dp"
    android:layout_marginTop="@dimen/overrallspacing"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/overrallspacing"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/cardsize"
        android:layout_height="@dimen/cardsize"
        app:cardBackgroundColor="@color/light_orange"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp">

        <ImageView
            android:id="@+id/iv_top_small_card"
            android:layout_width="40dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/biz_bulls" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_top_small_card"
        style="@style/fontregular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/minimumspacing"
        android:includeFontPadding="false"
        android:text="Food Delivery"
        android:fontFamily="@font/source_regular"
        android:textAlignment="center"
        android:textColor="@color/heading"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/small_font" />

</LinearLayout>