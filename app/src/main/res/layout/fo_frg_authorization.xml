<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_16sdp"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/stepSubmit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/twelveLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_width="wrap_content"
                        android:text="i)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:text="@string/ct_authinfoone" />
                </LinearLayout>

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_width="wrap_content"
                        android:text="ii)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:text="@string/ct_authinfotwo" />
                </LinearLayout>

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:layout_width="wrap_content"
                        android:text="iii)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:text="@string/ct_authinfothree" />
                </LinearLayout>

                <LinearLayout
                    style="@style/checkAndTextLayout"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkAuthorization"
                        style="@style/checkBox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/checkWithTextLayout"
                        android:text="@string/ct_authinfo" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stepSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_submit"
        android:gravity="center"
        android:text="@string/f_submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />
</RelativeLayout>