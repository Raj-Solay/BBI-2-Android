<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLocateAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/locate_office_address"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <!--search view to search our location-->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/idSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#BFBFBF"
            android:elevation="5dp"
            app:iconifiedByDefault="false"
            app:layout_constraintStart_toStartOf="@+id/txtLocateAddress"
            app:queryHint="Search Here"
            map:layout_constraintTop_toBottomOf="@+id/txtLocateAddress" />



        <FrameLayout
            android:id="@+id/frmLayout"
            app:layout_constraintEnd_toEndOf="@+id/txtLocateAddress"
            app:layout_constraintStart_toStartOf="@+id/txtLocateAddress"
            app:layout_constraintTop_toBottomOf="@+id/idSearchView"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <fragment
                android:id="@+id/mapLayout"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/txtLocateAddress"
                app:layout_constraintStart_toStartOf="@+id/txtLocateAddress"
                app:layout_constraintTop_toBottomOf="@+id/idSearchView"
                tools:context=".OfficeLocationMapsActivity" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgZoomOut"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="right|center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:src="@drawable/ic_zoomout"
                    app:tint="@color/orange_700" />

                <ImageView
                    android:id="@+id/imgZoomIn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="right"
                    app:tint="@color/orange_700"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:src="@drawable/ic_zoomin" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveLocation"
                    style="@style/fontregular"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_rounddarkorange"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_font"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/txtOfficeSpaceMeasurement"
            style="@style/inputBox"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="left|top"
            android:hint="@string/officespacemeasurement"
            android:lines="4"
            android:maxLines="4"
            app:layout_constraintEnd_toEndOf="@+id/txtLocateAddress"
            app:layout_constraintStart_toStartOf="@+id/txtLocateAddress"
            app:layout_constraintTop_toBottomOf="@+id/frmLayout" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llUploadOfficeBlueprint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/txtLocateAddress"
            app:layout_constraintStart_toStartOf="@+id/txtLocateAddress"

            app:layout_constraintTop_toBottomOf="@+id/txtOfficeSpaceMeasurement">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtbbi_agreementdate"
                style="@style/fontregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_weight="1.0"
                android:text="@string/upload_office_space_blueprint"
                android:textColor="@color/heading"
                android:textSize="@dimen/medium_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtbbi_agreementstatus" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                style="@style/fontregular"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_rounddarkorange"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/upload"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnrRootView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llUploadOfficeBlueprint"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5dp"
                    app:cardCornerRadius="@dimen/_8dp">
                    <LinearLayout
                        android:id="@+id/lnrViewImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--Image1-->
                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5dp"
                            app:cardCornerRadius="@dimen/_8dp">
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:id="@+id/uploadImageOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadOfficeBlueprint">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgvpancard"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload" />

                                    <ImageView
                                        android:id="@+id/imgpancard"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/checkWithTextLayout"
                                android:layout_width="wrap_content"
                                android:text="@string/upload_photo"
                                app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                        </LinearLayout>
                        <!--Image2-->
                        <LinearLayout
                            android:id="@+id/uploadImageTwo"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto2"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgvpancard2"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload" />

                                    <ImageView
                                        android:id="@+id/imgpancard2"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/checkWithTextLayout"
                                android:layout_width="wrap_content"
                                android:text="@string/upload_photo"
                                app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                        </LinearLayout>

                        <!--Image3-->
                        <LinearLayout
                            android:id="@+id/uploadImageThree"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto3"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgvpancard3"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload" />

                                    <ImageView
                                        android:id="@+id/imgpancard3"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/checkWithTextLayout"
                                android:layout_width="wrap_content"
                                android:text="@string/upload_photo"
                                app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                        </LinearLayout>

                        <!--Image 4-->
                        <LinearLayout
                            android:id="@+id/uploadImageFour"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto4"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgvpancard4"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload" />

                                    <ImageView
                                        android:id="@+id/imgpancard4"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/checkWithTextLayout"
                                android:layout_width="wrap_content"
                                android:text="@string/upload_photo"
                                app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                        </LinearLayout>

                        <!--Image 5-->
                        <LinearLayout
                            android:id="@+id/uploadImageFive"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhoto5"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgvpancard5"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload" />

                                    <ImageView
                                        android:id="@+id/imgpancard5"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/checkWithTextLayout"
                                android:layout_width="wrap_content"
                                android:text="@string/upload_photo"
                                app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                        </LinearLayout>

                        <!--Add Icon-->
                        <LinearLayout
                            android:id="@+id/lnrViewMultiAdd"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/llUploadPhotoAdd"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="@color/light_orange"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/imgAdd"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgvpancardAdd"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/add_new" />

                                    <ImageView
                                        android:id="@+id/imgpancardAdd"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/checkWithTextLayout"
                                android:layout_width="wrap_content"
                                android:text="Add Photo"
                                android:layout_gravity="center"
                                android:gravity="center"
                                app:layout_constraintEnd_toEndOf="@id/llUploadPhoto"
                                app:layout_constraintStart_toStartOf="@+id/llUploadPhoto"
                                app:layout_constraintTop_toBottomOf="@+id/llUploadPhoto" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </HorizontalScrollView>


            <androidx.cardview.widget.CardView
                android:id="@+id/llUploadVideo"
                android:layout_gravity="center"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/video"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/upload" />

                    <ImageView
                        android:id="@+id/videopancard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtVideo"
                style="@style/checkWithTextLayout"
                android:layout_width="wrap_content"
                android:text="@string/upload_video"
                app:layout_constraintEnd_toEndOf="@+id/llUploadVideo"
                app:layout_constraintStart_toStartOf="@+id/llUploadVideo"
                app:layout_constraintTop_toBottomOf="@+id/llUploadVideo" />
        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnsubmit"
            style="@style/fontsemibold"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialogbtn"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="2.4"
            android:background="@drawable/bg_round"
            android:gravity="center"
            android:text="@string/f_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtLocateAddress"
            app:layout_constraintStart_toStartOf="@+id/txtLocateAddress"
            app:layout_constraintTop_toBottomOf="@+id/lnrRootView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>