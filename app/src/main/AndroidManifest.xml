<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BizBullsIndia">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".menu.MyOfferActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".DashboardActivity"
            android:exported="true"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".CreateNewPasswordActivity"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".ProjectInfoActivity"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".ui.registrationforfo.FoRegistrationDashBoardActivity"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".ui.registrationforfo.FranchiseeRegistrationActivity"
            android:exported="true"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.bbi.bizbulls.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>